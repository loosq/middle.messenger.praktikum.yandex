ul(class=`profile__info ${isEdit ? 'profile__info--is-edit' : 'profile__info--noEdit'}`)
  if userInputsData
    each dataUser in userInputsData
      li(class="profile__item row content-between items-center")
        span #{dataUser.key}
        input(value=`${dataUser.value}` name=`${dataUser.name}`)
