div(class="profile column items-center content-center text-center full-width")
  a(class="profile__side absolute-top-left full-height column items-center content-center")
    svg(width="28" height="28" viewBox="0 0 28 28" fill="none" xmlns="http://www.w3.org/2000/svg")
      circle(cx="14" cy="14" r="14" transform="rotate(-180 14 14)" fill="#3369F3")
      rect(x="20" y="14.8" width="11" height="1.6" transform="rotate(-180 20 14.8)" fill="white")
      path(d="M13 19L9 14L13 9" stroke="white" stroke-width="1.6")
  div(class="profile__data")
    div(class="profile__img-wrapper relative")
      span(class="profile__img-change absolute-centered") Поменять<br/>аватар
      img(class="profile__img" height="130" width="130" src="../../../static/images/avatar1.png" alt="Аватар пользователя")
    h3(class="profile__title") Иван
    ul(class="profile__info")
      each dataUser in userData
        li(class="profile__item row content-between items-center")
          span #{dataUser.key}
          span #{dataUser.value}

    ul(class="profile__info profile__info-controls")
        each dataAction, i in userActions
          li(class="profile__item row content-between items-center")
             a(class=`${i === userActions.length - 1 ? 'profile__item-link--special' : 'profile__item-link'}` href="#") #{dataAction}
    | !{button}
